= form_tag user_sessions_path, method: :post do
  .form-group
    = label_tag :email
    = email_field_tag :email, '', class: 'form-control'
  .form-group
    = label_tag :password
    = password_field_tag :password, '', class: 'form-control'

  .actions
    = submit_tag t('.login'), class: 'btn btn-primary'
