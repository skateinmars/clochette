!!!5
%html
  %head
    %meta{charset: "utf-8"}
    %title
      = t('.title')
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=yes", name: "viewport"}
    = csrf_meta_tags
    = stylesheet_link_tag "application", media: "all"
  %body
    - if current_user
      %header.navbar.navbar-default{role: 'navigation'}
        .navbar-header
          = link_to t('.title'), root_path, class: 'navbar-brand'
        %nav
          %ul.nav.navbar-nav
            %li
              = link_to projects_path do
                %i.glyphicon.glyphicon-list
                = t('.projects')
            %li
              = link_to users_path do
                %i.glyphicon.glyphicon-user
                = t('.users')
          %ul.nav.navbar-nav.navbar-right
            %li.navbar-text
              = current_user.email
            %li
              = form_tag(logout_path, method: :delete, class: 'navbar-form') do
                = submit_tag t('.logout'), class: 'btn btn-danger', id: 'logout'
    .container
      = render 'layouts/flash'
      .row
        .col-md-12
          = yield
    = javascript_include_tag 'application'
